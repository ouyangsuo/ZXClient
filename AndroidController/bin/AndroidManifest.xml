<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.union.cellremote"
    android:versionCode="5"
    android:versionName="1.3.56" >
	<!-- 两版本发布修改处 7-3 
	开发环境:com.union.cellremote
	dFiM:    "com.union.app.dfim" 
	XXBOX:   "com.union.app.xxbox"
	-->
	
    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="14" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true"
        android:xlargeScreens="true" >
    </supports-screens>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.RESTART_PACKAGES" />

    <application
        android:name="com.dfim.app.common.UpnpApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppBaseTheme" >
         <!-- 两版本发布修改处 7-4
			dFiM 程序图标 ic_launcher
			xxbox程序图标 ic_launcher_xxbox 
		 -->
			
        <uses-library android:name="android.test.runner" >
        </uses-library>

        
        
        <!-- 20131121 开源sliding menu -->
        <activity android:name="com.crittercism.NotificationActivity"/>
        
        <activity android:name="com.dfim.app.activity.LoginActivity" android:screenOrientation="portrait" /> 
        <activity android:name="com.dfim.app.activity.ContentActivity" android:screenOrientation="portrait" />
        <activity android:name="com.dfim.app.activity.TabWebActivity" android:screenOrientation="portrait" />
        <activity android:name="com.dfim.app.activity.TabDeviceActivity" android:screenOrientation="portrait" />
        <activity android:name="com.dfim.app.activity.HomeActivity" android:screenOrientation="portrait" />
        <activity android:name="com.dfim.app.activity.WebListenActivity" android:launchMode="singleTask" android:screenOrientation="portrait" android:theme="@android:style/Theme.Translucent" />
        <activity android:name="com.dfim.app.activity.AlbumInfoActivity" android:launchMode="singleTask" android:screenOrientation="portrait" android:theme="@android:style/Theme.Translucent" />

        <!-- android:name="com.dfim.app.activity.MainActivity" -->
        <!-- android:name="com.dfim.app.test.MusicServiceActivity" --> 
        <activity 
            android:name="com.dfim.app.activity.MainActivity" 
            android:screenOrientation="portrait"
            android:label="@string/app_name"
            android:theme="@style/empty_theme"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>       
        
        <service android:name="com.dfim.app.upnp.MyUpnpServiceImpl" />
        <service android:name="com.union.cellremote.service.AVTransportSubscriptionService" />
        <service android:name="com.union.cellremote.service.BoxControlService" />
        
        <!-- for test -->
        <service android:name="com.dfim.app.test.MusicPlayService"/>
        <!-- <activity android:name="com.dfim.app.test.MusicServiceActivity" android:screenOrientation="portrait" />  -->
        
    </application>

    <instrumentation
        android:name="android.test.InstrumentationTestRunner"
        android:label="test for app"
        android:targetPackage="com.union.cellremote" >
    </instrumentation>

</manifest>