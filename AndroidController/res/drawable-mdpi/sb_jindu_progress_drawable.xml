<layer-list
	xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
		<shape>     
         <corners android:radius="0dp" />     
         <gradient     
             android:startColor="@color/progress_bg"   
             android:endColor="@color/progress_bg"
             android:angle="270"/> 
         <stroke android:width="0dp" android:color="@color/transparent"/>    
      </shape>     
	</item>
	
	<item android:id="@android:id/secondaryProgress">
		<clip android:drawable="@color/transparent"/>
	</item>
	
	<item android:id="@android:id/progress">
		<clip android:drawable="@color/progress_color"/>
	</item>
	
</layer-list>
