<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 公共提示框 -->
    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
    </style>

    <!-- 公共提示框文本 -->
    <style name="DialogText">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- 公共提示框标题 -->
    <style name="DialogText.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#F5740A</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <!-- ListItem中的主标题样式 -->
    <style name="BigBlackTitle">
        <item name="android:textColor">#3d3d3d</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 侧滑菜单中字体样式 -->
    <style name="SlidingItemText">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#ff000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-2</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <!-- 正在缓存字样 -->
    <style name="CachingText">
        <item name="android:textColor">#998b71</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- 单曲列表中播放模式显示字体 -->
    <style name="PlayModeText">
        <item name="android:textColor">#615347</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- ListItem中的主标题样式 -->
    <style name="TabTitle">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">30sp</item>
    </style>

    <!-- 自定义搜索框Edit -->
    <style name="EtSearch" parent="android:style/Widget.EditText">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/et_search</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMediumInverse</item>
        <item name="android:textColor">?android:attr/editTextColor</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <!-- 暂无数据字体样式 -->
    <style name="NoDataText">
        <item name="android:textColor">@color/text_color_on_cream</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">italic</item>
    </style>
    
    <!-- 自定义checkbox样式 -->
    <style name="customerCheckbox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_style</item>
    </style>

    <!-- 精品聚焦标题样式 -->
    <style name="BotiqueTitle">
        <item name="android:textColor">@color/botique_title</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- 已购买 -->
    <style name="AlreadyBoughtText">
        <item name="android:textColor">@color/dark_green</item>
        <item name="android:textSize">20sp</item>
    </style>
    
    <!-- 专辑简介标题 -->
    <style name="AlbumIntroductionTitle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/album_introduction_title_size</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <!-- 专辑简介文本 -->
    <style name="AlbumIntroductionText">
        <item name="android:textColor">@color/album_group_item_for_web_textcolor</item>
        <item name="android:textSize">@dimen/album_introduction_textsize_2</item>
    </style>

    <!-- ￥ 1.00 -->
    <style name="BuyMusicText">
        <item name="android:textColor">@color/dark_green2</item>
        <item name="android:textSize">20sp</item>
    </style>
    
    	<style name="login_hint_style">
	    <item name="android:textColor">@color/login_hint_color</item>
	    <item name="android:textSize">30sp</item>
	</style>
	<style name="login_device_item_style">
	    <item name="android:textColor">@color/login_list_item_color</item>
	    <item name="android:textSize">35sp</item>
	    <item name="android:paddingLeft">100dp</item>
	    <item name="android:textStyle">bold</item>
	</style>

</resources>