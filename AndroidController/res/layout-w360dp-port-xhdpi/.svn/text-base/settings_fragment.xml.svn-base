<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/icecream_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/title_bar_bg"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#fff" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/transparent" />

        <TextView
            android:id="@+id/tv_tabname"
            style="@style/TabTitle"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:text="设置" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/transparent" />

        <ImageButton
            android:id="@+id/btn_player"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/common_transparent_bg_selector"
            android:gravity="center"
            android:src="@drawable/btn_player"
            android:textColor="#fff" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingRight="10dp"
        android:text="当前适配720像素宽（含以上）界面"
        android:textSize="10sp" />

    <LinearLayout
        android:id="@+id/ll_ready"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="25dp" >

        <TextView
            android:id="@+id/tv_current_device"
            style="@style/BigBlackTitle"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:singleLine="true"
            android:text="当前设备："
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_current_user"
            style="@style/BigBlackTitle"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:singleLine="true"
            android:text="当前用户："
            android:textSize="13sp" />
        
        <TextView
            android:id="@+id/tv_device_version"
            style="@style/BigBlackTitle"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:singleLine="true"
            android:text="设备版本号："
            android:textSize="13sp" />
        
        <TextView
            android:id="@+id/tv_controller_version"
            style="@style/BigBlackTitle"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:singleLine="true"
            android:text="控制端版本号："
            android:textSize="13sp" />

        <Button
            android:id="@+id/btn_research_box"
            android:layout_width="334dp"
            android:layout_height="48dp"
            android:background="@drawable/btn_research_box_selector" />

        <Button
            android:id="@+id/shoudong_research_box"
            android:layout_width="334dp"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/shoudong_research_box_selector" />
    </LinearLayout>

</LinearLayout>