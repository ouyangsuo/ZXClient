<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_parent"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="afterDescendants"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp" >

    <LinearLayout
        android:id="@+id/ll_column_list_group"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/light_bg_selector"
        android:descendantFocusability="beforeDescendants"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <!-- android:background="@drawable/groupview_bg_selector" -->

        <TextView
            android:id="@+id/tv_name"
            style="@style/BotiqueTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="5dp"
            android:layout_weight="3"
            android:focusable="false"
            android:gravity="bottom"
            android:paddingLeft="20dp"
            android:text="热卖品" />

        <!-- android:background="@drawable/arrow_selector" -->

        <TextView
            android:id="@+id/ib_arrow"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@drawable/arrow_selector"
            android:focusable="false"
            android:gravity="center" />
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginTop="0dp"
        android:background="@color/botique_title_underline" />

</LinearLayout>