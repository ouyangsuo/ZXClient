<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/common_item_height"
    android:descendantFocusability="afterDescendants"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_num"
        style="@style/BigBlackTitle"
        android:layout_width="80dp"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:text="0000"
        android:textColor="@color/album_single_no"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/ll_listen"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="3"
        android:background="@drawable/light_bg_selector"
        android:focusable="true"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_music_name"
            style="@style/BigBlackTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingTop="15dp"
            android:singleLine="true"
            android:text="music_namemmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmm" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="25dp"
            android:paddingTop="6dp" >

            <TextView
                android:id="@+id/tv_music_artist"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:text="music_artist"
                android:textSize="25sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/common_item_height"
        android:layout_weight="1.4"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_listen"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/headphone"
            android:gravity="center"
            android:visibility="visible" />

        <Button
            android:id="@+id/btn_buy"
            style="@style/BuyMusicText"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/download"
            android:gravity="center"
            android:visibility="visible" />
    </LinearLayout>

</LinearLayout>