<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/common_item_height"
    android:orientation="horizontal" >


       <CheckBox   
                android:id="@+id/checkbox_item"
                android:layout_height="50dp"
                android:layout_width="50dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:enabled="false"
                android:focusable="false"
		        style="@style/customerCheckbox"/>
    <TextView
        android:id="@+id/tv_num"
        android:layout_width="80dp"
        android:layout_height="fill_parent"
        android:gravity="center"
        style="@style/BigBlackTitle"
        android:textColor="@color/album_single_no"
        android:text="0000"
        android:visibility="visible"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_music_name"
            style="@style/BigBlackTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingLeft="30dp"
            android:singleLine="true"
            android:text="music_namemmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmm" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="6dp"
            android:paddingLeft="25dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_saving_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/wait"/>

            <TextView
                android:id="@+id/tv_music_artist"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:paddingLeft="10dp"
                android:text="music_artist"
                android:singleLine="true"
                android:textSize="25sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/common_item_height"
        android:layout_weight="0.8"
        android:gravity="center" >


    </LinearLayout>

</LinearLayout>