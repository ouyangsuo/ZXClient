<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="70dp"
    android:baselineAligned="false"
    android:gravity="clip_vertical"
    android:orientation="horizontal" >
	
    <!-- 图标区域 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1.7"
        android:gravity="center" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:layout_width="106dp"
                android:layout_height="61dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/shape"
                android:contentDescription="@string/app_name" />

            <ImageView
                android:id="@+id/iv_theme_cover"
                android:layout_width="100dp"
                android:layout_height="55dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/theme_cover_bg"
                android:contentDescription="@string/app_name" />
        </FrameLayout>
    </LinearLayout>
	
    <!-- 标题及状态区域 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="2.3"
        android:gravity="center"
        android:orientation="vertical" >
		<!-- 主标题 -->
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
	        <TextView
	            android:id="@+id/tv_theme_name"
	            style="@style/BigBlackTitle"
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:singleLine="true" />
        </LinearLayout>
        
        <!-- 副标题区域 -->
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="15dp"
            android:orientation="horizontal" >
            <ImageView
                android:id="@+id/cache_status"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:contentDescription="@string/app_name"/>
	        <TextView
	            android:id="@+id/tv_theme_mcount"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:paddingLeft="10dp"
	            android:gravity="center"
            	android:textSize="10sp" />
        </LinearLayout>
        
    </LinearLayout>
	
    <!-- 箭头区域 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center" >

        <TextView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/arrow_list" />
    </LinearLayout>

</LinearLayout>