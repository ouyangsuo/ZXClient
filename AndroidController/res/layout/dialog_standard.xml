<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_marginLeft="@dimen/dialog_layout_margin_left"
	android:layout_marginRight="@dimen/dialog_layout_margin_left"
	android:background="@drawable/tips_bg"
	android:orientation="vertical">

	<TextView
		style="@style/DialogText.Title"
		android:id="@+id/title"
		android:textSize="@dimen/dialog_title_textsize"
		android:layout_width="@dimen/dialog_width"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/dialog_title_margin_top"
		android:layout_marginLeft="@dimen/dialog_title_margin_left"
		android:layout_marginBottom="@dimen/dialog_title_margin_bottom"
		android:layout_marginRight="@dimen/dialog_title_margin_left"
		android:text="TITLE"/>
	
	<TextView
		android:layout_width="fill_parent"
		android:layout_height="@dimen/common_divider_height"
		android:layout_marginLeft="@dimen/dialog_divider_margin_left"
	    android:layout_marginRight="@dimen/dialog_divider_margin_left"
		android:includeFontPadding="false"
		android:background="#F5740A"/>

	<LinearLayout
		android:id="@+id/content"
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="30dp"
		android:layout_marginLeft="40dp"
		android:layout_marginRight="40dp"
		android:layout_marginBottom="30dp"
		android:gravity="center">

		<TextView
			style="@style/DialogText"
			android:textSize="@dimen/dialog_msg_textsize"
			android:id="@+id/message"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:minHeight="@dimen/dialog_msg_minheight"
			android:lineSpacingExtra="@dimen/dialog_msg_line_spacing"
			android:gravity="left"
			android:text="MESSAGE\nMESSAGE"/>

	</LinearLayout>

	<TextView
		android:layout_width="fill_parent"
		android:layout_height="1dp"
		android:background="#3C3C3C"
		android:layout_marginLeft="@dimen/dialog_divider_margin_left"
	    android:layout_marginRight="@dimen/dialog_divider_margin_left"/>
	
	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="fill_parent"
		android:layout_height="@dimen/dialog_btn_area_height"
		android:gravity="center_vertical">

		<TextView
			android:id="@+id/positiveButton"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_height="fill_parent"
			android:includeFontPadding="false"
			android:text="取消"
			android:textSize="@dimen/dialog_btn_textsize"
			android:textColor="#FFFFFF"
			android:gravity="center"
			android:singleLine="true"
			android:clickable="true"
			android:focusable="true"
			android:focusableInTouchMode="true"/>
		
		<TextView
			android:id="@+id/txv_dialog_common_diliver"
			android:layout_width="1dp"
			android:layout_height="@dimen/dialog_btn_area_height"
			android:layout_marginBottom="@dimen/dialog_divider_margin_left"
			android:includeFontPadding="false"
			android:background="#3C3C3C"/>
		
		<TextView
			android:id="@+id/negativeButton"
			android:layout_width="0dp"
			android:layout_weight="1"
			android:layout_height="fill_parent"
			android:includeFontPadding="false"
			android:text="确认"
			android:textSize="@dimen/dialog_btn_textsize"
			android:textColor="#FFFFFF"
			android:gravity="center"
			android:singleLine="true"
			android:clickable="true"
			android:focusable="true"
			android:focusableInTouchMode="true"/>
	</LinearLayout>

</LinearLayout>