<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:background="@drawable/login_list_item_selector" >

    <TextView
        android:id="@+id/tv_device"
        android:layout_width="0dp"
        android:layout_height="@dimen/login_list_item_height"
        android:layout_weight="3"
        android:gravity="center_vertical"
        style="@style/login_device_item_style"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/login_list_item_height"
        android:layout_weight="0.5"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <RadioButton
            android:id="@+id/rb_choose"
            android:layout_width="37px"
            android:layout_height="37px"
            android:focusable="false"
            android:clickable="false"
            android:background="@drawable/login_radio_button_selector"
            android:button="@null"
            android:checked="false" />
    </LinearLayout>

</LinearLayout>