<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:background="@color/icecream_bg"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:layout_width="@dimen/load_failure_icon_width"
        android:layout_height="@dimen/load_failure_icon_height"
        android:background="@drawable/wifi_signal"
        android:gravity="center" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="@string/data_load_failed"
        android:textColor="@android:color/black"
        android:textSize="@dimen/reload_btn_textsize" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="@string/data_load_failed_info"
        android:textColor="@color/text_color_on_cream"
        android:textSize="@dimen/please_check_net_access"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_reload"
        style="@style/BuyMusicText"
        android:layout_width="@dimen/load_failure_btn_width"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:background="@drawable/common_rounded_btn_selector"
        android:gravity="center"
        android:text="@string/load_again"
        android:textColor="@android:color/black"
        android:textSize="@dimen/reload_btn_textsize"
        android:visibility="visible" />

</LinearLayout>