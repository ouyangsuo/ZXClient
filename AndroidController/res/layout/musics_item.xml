<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="140dp"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/iv_chosen"
        android:layout_width="10dp"
        android:layout_height="140dp"
        android:background="@color/current_playing" />
    
    <TextView
        android:id="@+id/tv_num"
        android:layout_width="40dp"
        android:layout_height="fill_parent"
        android:gravity="center_vertical|right"
        style="@style/BigBlackTitle"
        android:textColor="@color/album_single_no"
        android:text="5"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_music_name"
            style="@style/BigBlackTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingLeft="50dp"
            android:singleLine="true"
            android:text="music_name" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingTop="12dp"
            android:paddingLeft="45dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_saving_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/wait"/>

            <TextView
                android:id="@+id/tv_music_artist"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="music_artist"
                android:textSize="25sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:layout_weight="1"
        android:gravity="center" >

        <ImageView
            android:id="@+id/iv_playing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/playing_icon" 
            android:visibility="visible"/>
    </LinearLayout>

</LinearLayout>