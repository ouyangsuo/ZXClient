<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="70dp"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/iv_chosen"
        android:layout_width="7dp"
        android:layout_height="70dp"
        android:background="@color/current_playing" />
    
    <TextView
        android:id="@+id/tv_num"
        android:layout_width="50dp"
        android:layout_height="fill_parent"
        android:gravity="center"
        style="@style/BigBlackTitle"
        android:textColor="@color/album_single_no"
        android:text="0000"
        android:visibility="visible"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="3"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_music_name"
            style="@style/BigBlackTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:singleLine="true"
            android:text="music_namemmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmmm" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_saving_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/wait"/>

            <TextView
                android:id="@+id/tv_music_artist"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="music_artist"
                android:singleLine="true"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_weight="0.9"
        android:gravity="center" >

        <TextView
            android:id="@+id/iv_playing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/playing_icon" 
            android:text="加载中"
            android:visibility="visible"/>
    </LinearLayout>

</LinearLayout>